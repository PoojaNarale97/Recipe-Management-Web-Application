<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>RecipeManagement</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <servlet>
  <servlet-name>RecipeAddServlet</servlet-name>
  <servlet-class>com.controller.RecipeAddServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>RecipeAddServlet</servlet-name>
  <url-pattern>/RecipeAddServlet</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  <servlet-name>RecipeDeleteServlet</servlet-name>
  <servlet-class>com.controller.RecipeDeleteServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>RecipeDeleteServlet</servlet-name>
  <url-pattern>/RecipeDeleteServlet</url-pattern>
  </servlet-mapping>
  
  
  
  <servlet>
  <servlet-name>RecipeUpdateServlet</servlet-name>
  <servlet-class>com.controller.RecipeUpdateServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>RecipeUpdateServlet</servlet-name>
  <url-pattern>/RecipeUpdateServlet</url-pattern>
  </servlet-mapping>
  
  
  
  <servlet>
  <servlet-name>RecipeReadServlet</servlet-name>
  <servlet-class>com.controller.RecipeReadServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>RecipeReadServlet</servlet-name>
  <url-pattern>/RecipeReadServlet</url-pattern>
  </servlet-mapping>
  
</web-app>